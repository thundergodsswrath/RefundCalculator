                </div>
            </div>
            <div class="radio-tile-group">

                <div class="input-container">
                    <input asp-for="Input.PriceState" type="radio" value="@PriceState.Old" id="radio1" disabled/>
                    <div class="radio-tile">
                        <label for="radio1">Стара ціна</label>
                    </div>
                </div>

                <div class="input-container">
                    <input asp-for="Input.PriceState" type="radio" value="@PriceState.FirstIncrease" id="radio2" disabled/>
                    <div class="radio-tile">
                        <label class="" for="radio2">Перше підвищення</label>
                    </div>
                </div>

                <div class="input-container">
                    <input asp-for="Input.PriceState" type="radio" value="@PriceState.IntensivePrice" id="radio3" disabled/>
                    <div class="radio-tile">
                        <label for="radio3">Інтенсив</label>
                    </div>
                </div>
            </div>
            <p>Повернення: @Model.RefundPrice<span class="icon">₴</span></p>
            <button class="btn" type="submit">Порахувати</button>
        </form>
    </div>
</div>
<partial name="_ValidationScriptsPartial"/>
<script src="js/site.js"></script>
</body>
</html>