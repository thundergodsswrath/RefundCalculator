                    </div>
                    
                </div>
                <div class="input">
                    <label class="purple" for="price">Тип ціни</label>
                    <div class="relative">
                        <select asp-for="Input.PriceType" id="price">
                            <option value="@PriceType.Highest" selected>Найвища</option>
                            <option value="@PriceType.Mid">Середня</option>
                            <option value="@PriceType.Lowest">Найнижча</option>
                        </select>
